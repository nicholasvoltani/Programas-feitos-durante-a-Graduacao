from barabasi_albert import BAEvolve
import networkx as nx
import matplotlib.pyplot as plt
import gif
import random
import sys
from matplotlib.cm import ScalarMappable
plt.style.use('ggplot')

fig = plt.figure()

T = 10 ## Time of iteration

G = nx.Graph()
G.add_nodes_from(range(2))
## Randomly starts with an edge between first nodes
if random.randint(0,1):
    G.add_edge(0,1)

#if random.randint(0,1):
#    G.add_edge(1,0)
#for _ in range(T):
 #   G = BAEvolve(G)

@gif.frame
def plot_bar(it,G):
    nodes = list(G.nodes())
    degrees = list(map(G.degree, nodes))
    cmap = plt.get_cmap("OrRd")
    plt.bar(nodes, degrees, color = )
    sm = ScalarMappable(cmap = cmap, norm = plt.Normalize(0, max(degrees)))
    sm.set_array([])
    plt.colorbar(sm)
    plt.title(f"Iteration {it}")
     
